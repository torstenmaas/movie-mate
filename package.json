{
  "name": "movie-mate",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint \"{apps,packages}/**/*.js\" --max-warnings=0 --no-error-on-unmatched-pattern",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "jest --passWithNoTests",
    "test:db": "RUN_DB_TESTS=true jest --passWithNoTests --detectOpenHandles",
    "prepare": "husky install || true",
    "prisma:generate": "pnpm exec prisma generate --schema packages/@infra/prisma/prisma/schema.prisma",
    "prisma:migrate:dev": "dotenv -e .env -- pnpm exec prisma migrate dev --schema packages/@infra/prisma/prisma/schema.prisma",
    "prisma:migrate:deploy": "dotenv -e .env -- pnpm exec prisma migrate deploy --schema packages/@infra/prisma/prisma/schema.prisma",
    "prisma:reset": "dotenv -e .env -- pnpm exec prisma migrate reset --force --schema packages/@infra/prisma/prisma/schema.prisma",
    "prisma:seed": "dotenv -e .env -- tsx packages/@infra/prisma/seed.ts"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^6.14.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "zod": "^4.1.5"
  }
}
