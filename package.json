{
  "name": "movie-mate",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint \"{apps,packages}/**/*.{ts,tsx,js}\" --max-warnings=0 --no-error-on-unmatched-pattern",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "jest --passWithNoTests",
    "prepare": "husky install || true",
    "prisma:generate": "cd packages/@infra/prisma && npm run generate",
    "prisma:migrate": "cd packages/@infra/prisma && DATABASE_URL=$DATABASE_URL npx prisma migrate deploy",
    "prisma:seed": "cd packages/@infra/prisma && DATABASE_URL=$DATABASE_URL npm run seed"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
