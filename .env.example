# Application
NODE_ENV=development
PORT=3000

# Database (Postgres)
DATABASE_URL=postgresql://user:pass@localhost:5432/moviemate
DATABASE_ROLE_APP=app_user
DATABASE_ROLE_ADMIN_JOB=admin_job

# Redis
REDIS_URL=redis://localhost:6379

# Auth (Hybrid)
JWT_ISSUER=moviemate
JWT_AUDIENCE=moviemate.app
JWT_ACCESS_TTL=1h
JWT_REFRESH_TTL=7d
JWT_PUBLIC_KEY=
JWT_PRIVATE_KEY=
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Rate Limits (profiles)
RATE_LIMIT_ANON_PER_MIN=10
RATE_LIMIT_AUTH_PER_MIN=100
RATE_LIMIT_PREMIUM_PER_MIN=1000

# TMDB
TMDB_API_KEY=
TMDB_CACHE_TTL_DETAILS=86400       # 24h
TMDB_CACHE_TTL_SEARCH=600          # 10m
TMDB_CACHE_TTL_TRENDING=3600       # 1h

# Feature Flags (Unleash)
UNLEASH_URL=http://localhost:4242/api
UNLEASH_APP_NAME=moviemate
UNLEASH_CLIENT_KEY=dev-123

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
SENTRY_DSN=

# i18n
I18N_DEFAULT_LOCALE=de

# Security
IDEMPOTENCY_TTL_SECONDS=3600
CORS_ALLOWLIST=http://localhost:3000,http://localhost:3001
