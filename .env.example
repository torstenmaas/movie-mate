############################
# Movie Mate .env.example  #
############################

# App
NODE_ENV=development
PORT=3000
APP_NAME=movie-mate
LOG_LEVEL=info
ENABLE_SWAGGER=false

# Database (Postgres)
DATABASE_URL=postgresql://user:pass@localhost:5432/moviemate

# CORS (comma-separated origins)
CORS_ALLOWLIST=http://localhost:5173,http://localhost:3000

# Auth (JWT)
JWT_SECRET=dev-secret-change-me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev-refresh-secret-change-me
JWT_REFRESH_EXPIRES_IN=30d
REFRESH_PEPPER=

# Optional cookie-based refresh (default disabled)
REFRESH_TOKEN_COOKIE=false
REFRESH_COOKIE_NAME=refreshToken
CSRF_COOKIE_NAME=csrfToken
CSRF_HEADER_NAME=x-csrf-token
COOKIE_SECURE=false
COOKIE_DOMAIN=

# Rate Limit
RATE_LIMIT_AUTH_PER_MIN=100

# Observability (disabled)

# Maintenance
REFRESH_RETENTION_DAYS=30
